{
  "name": "parcel_boilerplate",
  "version": "1.0.0",
  "description": "A single page application boilerplate fetching html through javascript, utilizing parcel bundler, implementing spa routing, using express as a back end and loading content through prismic.",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "source": [
    "src/index.html",
    "./app.js"
  ],
  "type": "module",
  "keywords": [
    "single page application",
    "parcel",
    "boilerplate",
    "spa routing",
    "express",
    "prismic",
    "eslint"
  ],
  "scripts": {
    "start": "conc --kill-others \"npm run express-development\" \"npm run development\"",
    "development": "parcel --open --port 3000",
    "build": "parcel build",
    "express-build": "node app.js",
    "express-development": "nodemon app.js"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.3",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^5.7.1",
    "concurrently": "^7.6.0",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.33.0",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "nodemon": "^2.0.20",
    "os-browserify": "^0.3.0",
    "parcel": "^2.8.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.0",
    "util": "^0.12.5"
  },
  "dependencies": {
    "@prismicio/client": "^6.7.3",
    "@prismicio/helpers": "^2.3.9",
    "@studio-freight/lenis": "^0.2.28",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "gsap": "^3.11.4",
    "node-fetch": "^3.3.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "IS_DEVELOPMENT": "readonly"
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ]
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
